{
  "name": "wayfarer",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "node ./build/app.js",
    "dev": "DEBUG=wayfarer:* nodemon --exec babel-node ./src/app.js",
    "build": "rm -rf ./build && mkdir ./build && babel ./src -d ./build --copy-files -s",
    "clean": "rm -rf ./build",
    "test": "nyc mocha --require @babel/register --require @babel/polyfill src/tests/*.spec.js --exit --timeout 10000",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "deploy": "git push heroku develop:master"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codeclimate-test-reporter": "^0.5.1",
    "codecov": "^3.6.5",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1"
  }
}
